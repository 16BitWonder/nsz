<RootWidget>:
	ScreenManager:
		id: sm

		Screen:
			name: 'screen1'
			BoxLayout:
				pos_hint: {'x': .05, 'y': .05}
				size_hint: (.9, .9)
				orientation: 'vertical'
				StackLayout:
					size_hint_y: None
					height: 100
					Button:
						#background_normal: ''
						background_color: 0, .3, .4, .85
						size_hint: (.29, .45)
						text: 'Select Input File/Folder'
						on_release: root.showInputFileFolderDialog()
					Button:
						#background_normal: ''
						background_color: 0, .3, .4, .85
						size_hint: (.29, .45)
						text: 'Select Output File/Folder'
						on_release: root.showOutputFileFolderDialog()
					Button:
						#background_normal: ''
						background_color: 0, .3, .4, .85
						size_hint: (.14, .45)
						text: 'Settings [F1]'
						on_release: app.open_settings()
					Button:
						#background_normal: ''
						background_color: 0, .3, .4, .85
						size_hint: (.14, .45)
						text: 'Tools'
						on_release: root.showOutputFileFolderDialog()
					Button:
						#background_normal: ''
						background_color: 0, .3, .4, .85
						size_hint: (.14, .45)
						text: 'About'
						on_release: root.showOutputFileFolderDialog()
					Button:
						#background_normal: ''
						background_color: 0, .3, .4, .85
						size_hint: (.14, .45)
						text: 'About'
						on_release: root.showOutputFileFolderDialog()
	
				BoxLayout:
					id: inFilesLayout
					canvas.before:
						Color:
							rgba: (0, 0, 0, 0.4)
						Rectangle:
							pos: self.pos
							size: self.size
							
		Screen:
			name: 'screen2'
		Screen:
			name: 'screen3'
